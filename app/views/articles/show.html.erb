<h1><%= @article.title %></h1>

<h3>Category: <%= link_to @article.category.name, category_path(@article.category) %></h3>

<br>
<p><%= @article.body %></p>
<br>
<p>Posted By: <%= @article.user.username %></p>
<p>Created: <%= @article.date %></p>

<% if current_user == @article.user %>
  <div class="update-article">
    <%= link_to "Update Article", edit_category_article_path(@article) %>
  </div>
  <div class="destroy-article">
    <%= link_to "Delete Article", category_article_path(@article), method: :delete %>
  </div>
<% end %>
