<h1>Register</h1>

<%= form_for @user, url: { action: "create" } do |f| %>
  <%= f.label :username, 'Username: ' %>
  <%= f.text_field :username %>
  <br>
  <br>
  <%= f.label :email, 'Email: ' %>
  <%= f.email_field :email %>
  <br>
  <br>
  <%= f.label :password, 'Password: ' %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= submit_tag 'Register' %>
<% end %>